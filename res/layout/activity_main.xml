<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <TextView android:id="@+id/display_gioco_id"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:background="#dddddd"
	        android:text="@string/display_gioco_id"/>
	    <TextView android:id="@+id/display_gioco_seriale"
	       	android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:background="#dddddd"
	        android:text="@string/display_gioco_seriale"/>
	    
	</LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="takeSnapshot"
            android:text="@string/take_snapshot_btn" />

        <ImageView
            android:id="@+id/snapshot"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:contentDescription="@string/snapshot_description" />
    </LinearLayout>

</LinearLayout>
