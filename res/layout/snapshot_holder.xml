<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snapshot_wrapper_scroll"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:fillViewport="true"
    android:focusable="false"
    android:focusableInTouchMode="false" >

    <LinearLayout
        android:id="@+id/snapshot_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dialog_text"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/snapshot_gioco_0"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/snapshot_description"
            android:gravity="center"
            android:onClick="takeSnapshot"
            android:padding="10dp"
            android:src="@drawable/snapshot_teaser"
            android:tag="0" />

        <ImageView
            android:id="@+id/snapshot_gioco_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/snapshot_description"
            android:gravity="center"
            android:onClick="takeSnapshot"
            android:padding="10dp"
            android:src="@drawable/snapshot_teaser"
            android:tag="1" />

        <ImageView
            android:id="@+id/snapshot_gioco_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/snapshot_description"
            android:gravity="center"
            android:onClick="takeSnapshot"
            android:padding="10dp"
            android:src="@drawable/snapshot_teaser"
            android:tag="2" />

        <ImageView
            android:id="@+id/snapshot_gioco_3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/snapshot_description"
            android:gravity="center"
            android:onClick="takeSnapshot"
            android:padding="10dp"
            android:src="@drawable/snapshot_teaser"
            android:tag="3" />

        <ImageView
            android:id="@+id/snapshot_gioco_4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/snapshot_description"
            android:gravity="center"
            android:onClick="takeSnapshot"
            android:padding="10dp"
            android:src="@drawable/snapshot_teaser"
            android:tag="4" />
    </LinearLayout>

</ScrollView>