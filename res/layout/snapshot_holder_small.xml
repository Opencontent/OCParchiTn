<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snapshot_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="right"
    android:background="@color/dialog_text"
    android:fillViewport="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    android:weightSum="2" >

    <ImageView
        android:id="@+id/snapshot_gioco_0"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:contentDescription="@string/snapshot_description"
        android:gravity="center"
        android:padding="2dp"
        android:src="@drawable/snapshot_teaser"
        android:tag="0" />

    <ImageView
        android:id="@+id/snapshot_gioco_1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:contentDescription="@string/snapshot_description"
        android:gravity="center"
        android:padding="2dp"
        android:src="@drawable/snapshot_teaser"
        android:tag="1" />

</LinearLayout>