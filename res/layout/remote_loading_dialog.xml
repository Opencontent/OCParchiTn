<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remote_loading_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout 
        android:orientation="vertical"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
    <TextView
        android:id="@+id/remote_loading_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/remote_loading_dialog_text" 
        android:textColor="@color/dialog_text"/>
    <TextView
        android:id="@+id/remote_loading_dialog_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="" 
        android:textColor="@color/dialog_text"/>
	</LinearLayout>
    <ProgressBar
        android:id="@+id/remote_loading_dialog_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left" />

</LinearLayout>
